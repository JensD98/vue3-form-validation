{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "allowJs": false,
    "checkJs": false,
    "lib": ["ESNext", "DOM"],
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["packages/vue3-form-validation/src"],
  "exclude": ["packages/**/__tests__", "dist"]
}
